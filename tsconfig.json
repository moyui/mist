{
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "paths": {
      "@app/prompts": [
        "libs/prompts/src"
      ],
      "@app/prompts/*": [
        "libs/prompts/src/*"
      ],
      "@app/config": [
        "libs/config/src"
      ],
      "@app/config/*": [
        "libs/config/src/*"
      ],
      "@app/utils": [
        "libs/utils/src"
      ],
      "@app/utils/*": [
        "libs/utils/src/*"
      ],
      "@app/shared-data": [
        "libs/shared-data/src",
        "libs/shared-data/src"
      ],
      "@app/shared-data/*": [
        "libs/shared-data/src/*",
        "libs/shared-data/src/*"
      ],
      "@app/timezone": [
        "libs/timezone/src"
      ],
      "@app/timezone/*": [
        "libs/timezone/src/*"
      ],
      "@app/constants": [
        "libs/constants/src"
      ],
      "@app/constants/*": [
        "libs/constants/src/*"
      ]
    }
  }
}