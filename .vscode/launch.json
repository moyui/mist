{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Chan App",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev:chan"],
      "console": "integratedTerminal",
      "restart": true,
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/apps/chan/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Chan Tests",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "--", "apps/chan"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Specific Test File",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "${fileBasenameNoExtension}",
        "--config",
        "jest.config.js",
        "--detectOpenHandles",
        "--verbose",
        "--no-coverage"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Chan with Breakpoints",
      "program": "${workspaceFolder}/node_modules/.bin/nest",
      "args": ["start", "chan", "--debug", "--watch"],
      "console": "integratedTerminal",
      "restart": true,
      "autoAttachChildProcesses": true,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/apps/chan/**/*.js"]
    }
  ]
}