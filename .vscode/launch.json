{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "ðŸš€ Debug Chan App with pnpm",
      "program": "${workspaceFolder}/dist/apps/chan/main.js",
      "preLaunchTask": "build:chan",
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "restart": true,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "outputCapture": "std",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/apps/chan/**/*.js"
      ]
    }
  ]
}