{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/mist/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      "**/*.env"
    ],
    "webpack": true,
    "tsConfigPath": "apps/mist/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/mist",
  "projects": {
    "mist": {
      "type": "application",
      "root": "apps/mist",
      "entryFile": "main",
      "sourceRoot": "apps/mist/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mist/tsconfig.app.json"
      }
    },
    "saya": {
      "type": "application",
      "root": "apps/saya",
      "entryFile": "main",
      "sourceRoot": "apps/saya/src",
      "compilerOptions": {
        "tsConfigPath": "apps/saya/tsconfig.app.json"
      }
    }
  }
}